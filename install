# Update installation to latest
sudo apt-get update
sudo apt-get upgrade

# Install X server
sudo apt-get install --no-install-recommends xserver-xorg x11-xserver-utils xinit openbox xdotool

# Install Chromium
sudo apt-get install --no-install-recommends chromium-browser

# Make X server start on boot
echo '[[ -z $DISPLAY && $XDG_VTNR -eq 1 ]] && startx -- -nocursor' > ~/.bash_profile

# Modify autostart file
wget https://raw.githubusercontent.com/peterchave/pi-kiosk/main/autostart
copy autostart /etc/xdg/openbox/autostart

# Add --confirm to command to auto run
bash <(curl -sL https://raw.githubusercontent.com/node-red/linux-installers/master/deb/update-nodejs-and-nodered)

# Start node-red service
sudo systemctl enable nodered.service
